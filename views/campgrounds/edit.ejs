<%- include("../partials/header") %>
	<div class="row">
		<h1 style="text-align : center;">Edit <%= campground.name %></h1>
		<div class="responsive-form">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"  autocomplete="off" >
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" step="50">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[image]" placeholder="image" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="campground[description]" rows="5"><%=campground.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
		</div>
	</div>
<%- include("../partials/footer") %>