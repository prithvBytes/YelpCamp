<%- include("../partials/header") %>
<div class="row">
	<h1 style="text-align : center">Edit Profile of <%= user.username %></h1>
	<div class="responsive-form">
		<form action="/user/<%= user._id %>?_method=PUT" method="POST"  autocomplete="off" >
			<div class = "form-group">
				<input class="form-control" type="text" name="user[firstname]" value="<%= user.firstname %>">
			</div>
			<div class = "form-group">
				<input class="form-control" type="text" name="user[lastname]" value="<%= user.lastname %>">
			</div>
			<div class = "form-group">
				<input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
			</div>
			<div class = "form-group">
				<input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
			</div>
			<div class="form-group">
				<input type="tel" class="form-control" name="phone" value="user[phone]" pattern="[0-9]{10}">
			</div>
			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-primary btn-block">
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>