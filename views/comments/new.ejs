<%- include("../partials/header") %>
	<div class="row">
		<h1 style="text-align : center;">Add a comment to <%= campground.name %></h1>
		<div class="responsive-form">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST" autocomplete="off" >
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Your Comment">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
		</div>
	</div>
<%- include("../partials/footer") %>